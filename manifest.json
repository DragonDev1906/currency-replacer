{
    "name": "Currency Replacer",
    "description": "Can replaces occurances of one currency (e.g. USD) with their equivalent in a different currency (e.g. RAI)",
    "version": "0.1",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["fetchPriceFunctions.js", "replacer.js"]
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },
    "permissions": [
        "storage"
    ]
}
